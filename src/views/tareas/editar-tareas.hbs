<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header text-center">
            <h3>Editar Tarea</h3>
        </div>
        <div class="card-body">
            <form action="/tareas/actualizar/{{tarea.id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="mb-3">
                    <label for="nombre">Nombre:</label>
                    <input type="text" name="nombre" class="form-control" value="{{tarea.nombre}}" />
                </div>
                <div class="mb-3">
                    <label for="descripcion">Descripci√≥n:</label>
                    <textarea name="descripcion" class="form-control">{{tarea.descripcion}}</textarea>
                </div>
                <div class="form-group">
                    <select name="estado" class="form-control">
                        <option value="Pendiente" {{tarea.estado }}>Pendiente</option>
                        <option value="En progreso" {{tarea.estado}}>En Progreso</option>
                        <option value="Completada" {{tarea.estado}}>Completada</option>
                    </select>
                </div>
                <button class="btn btn-primary w-100" type="submit">
                    Editar
                </button>
            </form>
        </div>
    </div>
</div>