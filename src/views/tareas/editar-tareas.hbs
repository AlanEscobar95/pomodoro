<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3 class="text-center">Editar Tarea</h3>
    </div>
    <div class="card-body">
        <form action="/tareas/actualizar/{{tarea.id}}" method="POST">
          <input type="hidden" name="_method" value="PUT">
            <div class="form-group">
                <input type="text" name="nombre" class="form-control" value="{{tarea.nombre}}">
            </div>
            <div class="form-group">
                <textarea name="descripcion" rows="2" class="form-control">{{tarea.descripcion}}</textarea>
            </div>
            <div class="form-group">
            <select name="estado" class="form-control">
                <option value="Pendiente" {{tarea.estado }}>Pendiente</option>
                <option value="En progreso" {{tarea.estado}}>En Progreso</option>
                <option value="Completada" {{tarea.estado}}>Completada</option>
            </select>
            </div>

            <div class="form-group">             
                <button type="submit" class="btn btn-primary btn-block btn-sm">Editar</button>
            </div>
        </form>
    </div>
</div>