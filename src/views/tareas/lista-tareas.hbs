<div class="row">
    {{#each tareas}}
    <br>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{nombre}}
                    <a href="/tareas/edit/{{_id}}"><i class="fa fa-edit"></i></a></h4>
                <p>{{descripcion}}</p>
                <p>{{estado}}</p>
                <form action="/tareas/delete/{{_id}}"  method= "POST">
                    <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                </form>
            </div>
    </div>
    {{/each}}
</div>