<form action="/tareas/nueva-tarea" method="POST">
    <div class="form-group">
        <label for="nombre">Nombre</label>
        <input type="text" name="nombre" class="form-control" placeholder="Nombre de la tarea">
    </div>
    <div class="form-group">
        <label for="descripcion">Descripción</label>
        <textarea name="descripcion" class="form-control" placeholder="Descripción de la tarea"></textarea>
    </div>
    <div class="form-group">
        <label for="estado">Estado</label>
        <select name="estado" class="form-control">
            <option value="Pendiente">Pendiente</option>
            <option value="En proceso">En proceso</option>
            <option value="Finalizada">Finalizada</option>
        </select>
    </div>
    <div class="form-group">
    <button class="btn btn-primary">Guardar</button>
    </div>
</form>